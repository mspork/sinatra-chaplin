      </ul>

      <section class="top-bar-section">
      <!-- Left Nav Section -->
      <ul class="left">
        <li class="divider"></li>
        <li class="active"><a href="#notes">Notes</a></li>
        <li class="divider"></li>
        <li><a href="#">Main Item 2</a></li>
      </ul>
      </section>          
    </nav>

    <div id="content-container" ></div>
